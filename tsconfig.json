{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true, // json imports
    "allowSyntheticDefaultImports": true, // support typesystem compatibility
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ]
}
